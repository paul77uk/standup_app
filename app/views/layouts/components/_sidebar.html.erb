<% if @team.present? && !@team.id.nil? %>
  <div class="bg-gray-800 shadow-xl h-16 fixed bottom-0 mt-12 md:relative md:h-screen z-10 w-full md:w-48">

    <div class="md:mt-12 md:w-48 md:fixed md:left-0 md:top-0 content-center md:content-start text-left justify-between">
      <ul class="list-reset flex flex-row md:flex-col py-0 md:py-3 px-1 md:px-2 text-center md:text-left">
        <li class="mr-3 flex-1">
          <h3 class=" pl-3 pb-1 md:pb-0 text-lg text-gray-600 md:text-gray-400 block md:inline-block">Team: <%= @team.name %>
          </h3>
        </li>
        <li class="mr-3 flex-1">
          <%= link_to team_path(@team), {class: "block py-1 md:py-3 pl-1 align-middle text-gray-300 no-underline hover:text-white border-b-2 border-gray-800 hover:border-white", id: "edit_#{@team.id}_sidebar"} do %>
            <%= heroicon 'identification', class: 'ml-6  inline' %>
            <span class=""> Details</span>
          <% end %>
        </li>
        <li class="mr-3 flex-1">
          <%= link_to edit_team_path(@team), {class: "block py-1 md:py-3 pl-1 align-middle text-gray-300 no-underline hover:text-white border-b-2 border-gray-800 hover:border-white", id: "edit_#{@team.id}_sidebar"} do %>
            <%= heroicon 'cog', class: 'ml-6  inline'%>
            <span class=""> Settings</span>
          <% end %>
        </li>
        <li class="mr-3 flex-1">
          <a href=<%="/t/#{@team.id}/s"%> class="block py-1 md:py-3 pl-1 align-middle text-gray-300 no-underline hover:text-white border-b-2 border-gray-800 hover:border-white">
            <%= heroicon 'circle-stack', class: 'ml-6  inline' %>
            <span class=""> Standups</span>
          </a>
        </li> 
      </ul>
    </div>
  </div>
<% end %>