<div id="<%= dom_id standup %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= standup.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Standup date:</strong>
    <%= standup.standup_date %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this standup", standup, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this standup', edit_standup_path(standup), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
